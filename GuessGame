import random


def start_game():
    #prints the welcoming banner for the game
    print("-" * 30, '\n',
        'Welcome to the Guessing Game!', '\n', 
        "-" * 28, '\n')
        
if __name__ == '__main__':
    # Kick off the program by calling the start_game function.
    start_game()
    attempts = 0
    high_score = 0
